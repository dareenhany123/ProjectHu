<Page x:Class="Registe_loginDeskapp.choose"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Registe_loginDeskapp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="choose">

    <Grid Background="Bisque">
        <Label VerticalAlignment="Top" Style="{StaticResource labelschoose}" Margin="150,188,150,0">Choose What To Make</Label>
        <ComboBox Name="comb" Style="{StaticResource combochoose}" Margin="300,277,300,123">
            <ComboBoxItem>
                Signin
            </ComboBoxItem>
            <ComboBoxItem>
                Signup
            </ComboBoxItem>
            <ComboBoxItem>
                Forget Password
            </ComboBoxItem>
            <ComboBoxItem>
                Admin Delete
            </ComboBoxItem>
            <ComboBoxItem>
                Admin Search
            </ComboBoxItem>
        </ComboBox>
        <Button Style="{StaticResource buttons}" Margin="628,371,72,29" Click="Button_Click">GO</Button>
    </Grid>
</Page>
